@using FrogRacer.Models
<h2>Betting</h2>

@{
    ViewBag.Title = "Betting";   
}

<div>@ViewBag.message <br /></div>

<div class="form-horizontal">  @*<--- ändra tillbaka till row*@
    <form action="/Betting/CalculateFrogRace" method="post" modell="Frogs">
        @foreach (var frog in ViewBag.frogList)
        {
            <div class="col-md-4">
                @frog.Name<br />
                <img src="~/Content/Images/@frog.ImageName" width="200">
                <input type="text" name="frog1"><br>
                <br />
            </div>
        }
        <div class="col-md-8">
        <input type="submit" value="Race!" />
        </div>
</form>
</div>

