<h2>Race Result</h2>

<form>
    @ViewBag.winnerFrog.Name is the winner!<br />
    @ViewBag.ResultMessage<br /><br /><br />

    <img src="~/Content/Images/@ViewBag.winnerFrog.ImageName" width="200">
    <br /><br />

    <div class="row">
        <div class="col-md-2">
            <br />

            <a href="http://localhost:64708/Home/RemoveUser">Quit!</a>
        </div>
        <div class="col-md-4">
            <br />
            @if (ViewBag.Balance != 0)
            {
                <a href="http://localhost:64708/Home/SignUp?userName=@ViewBag.resultUserName">Race Again!</a>
            }
        </div>
    </div>
</form>
